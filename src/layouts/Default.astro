---
  import Footer from '@components/Global/Footer.astro'

import Navigation from '../components/Global/Navigation.vue'
let { metaTitle } = Astro.props;

---

<html lang="en" >

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{metaTitle}</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link
  rel="stylesheet"
  href={Astro.resolve("../styles/global.css")}
  >
  <meta name="description" content="Community Builders are specialized groups who are eager to help the Dev Protocol ecosystem to grow, lead their community, and develop content that will help anyone to get started in blockchain, web3, and dev protocol technology." />
  <meta property="og:title" content={metaTitle} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://builders.devprotocol.xyz/" />
  <meta property="og:image" content="/assets/og.png" />
  <meta property="og:description" content="Community Builders are specialized groups who are eager to help the Dev Protocol ecosystem to grow, lead their community, and develop content that will help anyone to get started in blockchain, web3, and dev protocol technology." />
</head>

<body class="text-gray-900 font-body dark:bg-darkPrimary dark:text-white">
  <Navigation client:visible></Navigation>
  <main class="md:grid md:grid-flow-row gap-y-20 lg:gap-y-40">
    <slot />
  </main>
  <Footer></Footer>
</body>

</html>
